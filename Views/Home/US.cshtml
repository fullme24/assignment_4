@{
}

@model IEnumerable<assignment_4.Models.USPM>

    <div class="lav justify-content-md-center rounded">
        <table class="table-bordered table-success table-hover tableUnique">
            <thead>
                <tr>
                    <th>Name</th>
                    &nbsp
                    &nbsp
                    <th>Restaurant Name</th>
                    &nbsp
                    &nbsp
                    <th>User's Favorite Dish</th>
                    &nbsp
                    &nbsp
                    <th>Phone</th>
                </tr>
            </thead>

            <tbody>
                @foreach (assignment_4.Models.USPM m in Model)
                {
                <tr>
                        <td>@m.Name</td>
                        <td>@m.Restaurant_Name</td>
                        <td>@m.Favorite_Dish</td>
                        <td>@m.Phone</td>
                </tr>
                }
            </tbody>
        </table>
    </div>